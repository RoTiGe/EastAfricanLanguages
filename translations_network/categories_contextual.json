{
  "metadata": {
    "version": "2.0",
    "description": "Contextual language learning framework with time-of-day and relationship variations",
    "created": "2026-01-03",
    "purpose": "Enable learners to understand how the same meaning is expressed differently based on context"
  },
  "contexts": {
    "time_of_day": [
      {
        "id": "morning",
        "name": "Morning (6 AM - 12 PM)",
        "description": "Early day greetings and interactions",
        "typical_phrases": ["good morning", "breakfast", "start work", "wake up"]
      },
      {
        "id": "midday",
        "name": "Midday/Lunch (12 PM - 2 PM)",
        "description": "Lunch time and midday interactions",
        "typical_phrases": ["lunch", "break time", "hungry", "eat"]
      },
      {
        "id": "afternoon",
        "name": "Afternoon (2 PM - 6 PM)",
        "description": "Afternoon work and activities",
        "typical_phrases": ["good afternoon", "continue", "almost done", "tired"]
      },
      {
        "id": "evening",
        "name": "Evening (6 PM - 10 PM)",
        "description": "End of day, dinner, relaxation",
        "typical_phrases": ["good evening", "dinner", "going home", "rest"]
      },
      {
        "id": "night",
        "name": "Night (10 PM - 6 AM)",
        "description": "Late night and overnight",
        "typical_phrases": ["good night", "sleep", "emergency", "late"]
      }
    ],
    "relationships": [
      {
        "id": "formal_stranger",
        "name": "Formal - Stranger",
        "formality": "high",
        "trust_level": "low",
        "description": "First meeting, professional distance",
        "language_features": ["titles", "formal pronouns", "polite forms", "indirect requests"]
      },
      {
        "id": "formal_professional",
        "name": "Formal - Professional (Boss/Employee)",
        "formality": "high",
        "trust_level": "medium",
        "description": "Workplace hierarchy, respectful",
        "language_features": ["titles", "formal pronouns", "clear instructions", "professional courtesy"]
      },
      {
        "id": "formal_authority",
        "name": "Formal - Authority (Police/Official)",
        "formality": "very_high",
        "trust_level": "variable",
        "description": "Dealing with officials, law enforcement",
        "language_features": ["very formal", "respectful", "clear", "compliant"]
      },
      {
        "id": "neutral_acquaintance",
        "name": "Neutral - Acquaintance",
        "formality": "medium",
        "trust_level": "medium",
        "description": "Neighbors, regular customers, casual contacts",
        "language_features": ["polite", "friendly", "some informality"]
      },
      {
        "id": "informal_friend",
        "name": "Informal - Friend",
        "formality": "low",
        "trust_level": "high",
        "description": "Friends, peers, trusted colleagues",
        "language_features": ["casual", "slang", "jokes", "informal pronouns"]
      },
      {
        "id": "intimate_family",
        "name": "Intimate - Family",
        "formality": "very_low",
        "trust_level": "very_high",
        "description": "Close family members",
        "language_features": ["very casual", "terms of endearment", "direct", "emotional"]
      },
      {
        "id": "intimate_romantic",
        "name": "Intimate - Romantic Partner",
        "formality": "very_low",
        "trust_level": "very_high",
        "description": "Spouse, romantic partner",
        "language_features": ["affectionate", "terms of endearment", "intimate", "supportive"]
      },
      {
        "id": "hierarchical_parent_child",
        "name": "Hierarchical - Parent to Child",
        "formality": "low",
        "trust_level": "very_high",
        "description": "Parent speaking to child",
        "language_features": ["instructive", "caring", "simple", "patient"]
      },
      {
        "id": "hierarchical_child_parent",
        "name": "Hierarchical - Child to Parent",
        "formality": "medium",
        "trust_level": "very_high",
        "description": "Child speaking to parent",
        "language_features": ["respectful", "seeking approval", "honest"]
      },
      {
        "id": "hierarchical_elder",
        "name": "Hierarchical - Addressing Elder",
        "formality": "high",
        "trust_level": "high",
        "description": "Speaking to community elders, grandparents",
        "language_features": ["very respectful", "honorifics", "formal", "deferential"]
      },
      {
        "id": "transactional_service",
        "name": "Transactional - Service Provider",
        "formality": "medium",
        "trust_level": "medium",
        "description": "Shop keeper, waiter, taxi driver",
        "language_features": ["polite", "clear", "transactional", "efficient"]
      },
      {
        "id": "cautious_distrust",
        "name": "Cautious - Distrust",
        "formality": "high",
        "trust_level": "low",
        "description": "Suspicious situations, potential scams",
