      },
      {
        "id": "playful_fun",
        "name": "Playful - Fun/Joking",
        "formality": "very_low",
        "trust_level": "high",
        "description": "Joking with friends, playful banter",
        "language_features": ["humor", "teasing", "slang", "exaggeration"]
      }
    ]
  },
  "contextual_categories": [
    {
      "id": "greetings_contextual",
      "name": "Greetings (Contextual)",
      "base_category": "basic_communication",
      "description": "Greetings that vary by time of day and relationship",
      "priority": 1,
      "contexts_used": ["time_of_day", "relationships"],
      "phrase_templates": [
        {
          "template_id": "morning_greeting",
          "base_meaning": "Good morning",
          "time_context": "morning",
          "variations": {
            "formal_stranger": "Good morning, sir/madam",
            "formal_professional": "Good morning, [Title] [Name]",
            "formal_authority": "Good morning, officer/sir",
            "neutral_acquaintance": "Good morning! How are you?",
            "informal_friend": "Morning! / Hey, morning!",
            "intimate_family": "Morning, dear/love/honey",
            "intimate_romantic": "Good morning, my love",
            "hierarchical_parent_child": "Good morning, sweetheart/darling",
            "hierarchical_child_parent": "Good morning, Mom/Dad/Mama/Papa",
            "hierarchical_elder": "Good morning, [respectful title]",
            "transactional_service": "Good morning, how can I help you?",
            "playful_fun": "Mornin'! / Rise and shine!"
          }
        },
        {
          "template_id": "midday_greeting",
          "base_meaning": "Midday greeting",
          "time_context": "midday",
          "variations": {
            "formal_stranger": "Good afternoon",
            "formal_professional": "Good afternoon, how are you?",
            "neutral_acquaintance": "Hi! / Hello there!",
            "informal_friend": "Hey! What's up?",
            "transactional_service": "Hello, what would you like?",
            "hierarchical_child_parent": "Hi Mom/Dad, what's for lunch?"
          }
        },
        {
          "template_id": "evening_greeting",
          "base_meaning": "Good evening",
          "time_context": "evening",
          "variations": {
            "formal_stranger": "Good evening",
            "formal_professional": "Good evening, see you tomorrow",
            "neutral_acquaintance": "Evening! How was your day?",
            "informal_friend": "Hey! Done for the day?",
            "intimate_family": "Hi! I'm home!",
            "intimate_romantic": "Hi honey/darling, how was your day?",
            "hierarchical_child_parent": "Hi Mom/Dad, I'm home",
            "hierarchical_parent_child": "Welcome home, how was school/work?"
          }
        },
        {
          "template_id": "night_farewell",
          "base_meaning": "Good night",
          "time_context": "night",
          "variations": {
            "formal_professional": "Good night, see you tomorrow",
            "neutral_acquaintance": "Good night, take care",
            "informal_friend": "Night! Sleep well!",
            "intimate_family": "Good night, sleep tight",
            "intimate_romantic": "Good night, my love. Sweet dreams",
            "hierarchical_parent_child": "Time for bed, sweetie. Good night",
            "hierarchical_child_parent": "Good night, Mom/Dad. Love you"
          }
        }
      ]
    },
    {
      "id": "requests_help_contextual",
      "name": "Requesting Help (Contextual)",
      "base_category": "survival",
      "description": "How to ask for help varies greatly by relationship and urgency",
      "priority": 2,
      "contexts_used": ["relationships", "urgency"],
      "phrase_templates": [
        {
          "template_id": "polite_help_request",
          "base_meaning": "Can you help me?",
          "urgency": "low",
          "variations": {
            "formal_stranger": "Excuse me, could you please help me?",
            "formal_professional": "Could I ask for your assistance?",
            "formal_authority": "Officer/Sir, I need assistance, please",
            "neutral_acquaintance": "Hi, can you help me with something?",
            "informal_friend": "Hey, can you give me a hand?",
            "intimate_family": "Can you help me real quick?",
            "hierarchical_child_parent": "Mom/Dad, can you help me?",
            "hierarchical_parent_child": "Let me help you with that",
            "cautious_distrust": "I need help, but could you identify yourself first?"
          }
        },
        {
          "template_id": "urgent_help_request",
          "base_meaning": "I need help now!",
          "urgency": "high",
          "variations": {
            "formal_stranger": "Please help me! It's urgent!",
            "formal_authority": "Officer! I need immediate help!",
            "neutral_acquaintance": "Please help! Emergency!",
            "informal_friend": "Help me! Quick!",
            "intimate_family": "Help! I need you now!",
            "hierarchical_child_parent": "Mom/Dad! Help!"
          }
        }
      ]
    }
  ]
}

