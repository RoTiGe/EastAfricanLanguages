<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container-fluid p-0">
        <!-- Header -->
        <header class="text-white py-4 position-relative">
            <div class="container">
                <a href="/" class="btn btn-light position-absolute top-0 start-0 m-3">
                    <i class="bi bi-arrow-left me-2"></i>Back to Home
                </a>
                <h1 class="text-center display-5 fw-bold"><%= title %></h1>
            </div>
        </header>

        <!-- Main Content -->
        <main class="container my-4">
            <div class="row g-4 mb-4">
                <!-- Input Section -->
                <div class="col-12 col-lg-6">
                    <div class="card shadow-sm h-100">
                        <div class="card-body p-4">
                            <h2 class="h4 mb-3 text-primary">
                                <i class="bi bi-pencil-square me-2"></i><%= ui.enterText || 'Enter Text' %>
                            </h2>
                            <div class="mb-3">
                                <textarea 
                                    id="demoText" 
                                    class="form-control form-control-lg" 
                                    placeholder="<%= ui.placeholder || 'Type or paste text in ' + language + '...' %>"
                                    rows="8"
                                ></textarea>
                            </div>
                            
                            <div class="d-grid gap-2 d-md-flex">
                                <button onclick="speak()" class="btn btn-primary btn-lg flex-fill">
                                    <i class="bi bi-volume-up me-2"></i><%= ui.speakButton || 'Speak' %>
                                </button>
                                <button onclick="clearText()" class="btn btn-secondary btn-lg flex-fill">
                                    <i class="bi bi-trash me-2"></i><%= ui.clearButton || 'Clear' %>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Output Section -->
                <div class="col-12 col-lg-6">
                    <div class="card shadow-sm h-100">
                        <div class="card-body p-4">
                            <h2 class="h4 mb-3 text-primary">
                                <i class="bi bi-speaker me-2"></i><%= ui.audioOutput || 'Audio Output' %>
                            </h2>
                            <div id="demoStatus" class="status mb-3"></div>
                            <audio id="demoAudioPlayer" controls class="w-100 mb-4"></audio>
                            
                            <div class="alert alert-info border-0">
                                <h3 class="h6 fw-bold mb-2">
                                    <i class="bi bi-info-circle me-2"></i><%= ui.languageLabel || 'Language' %>: <%= language.charAt(0).toUpperCase() + language.slice(1) %>
                                </h3>
                                <p class="mb-0 font-monospace small">Code: <%= language %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Example Phrases Section -->
            <section class="card shadow-sm">
                <div class="card-body p-4">
                    <h3 class="h4 mb-4 text-primary">
                        <i class="bi bi-chat-quote me-2"></i><%= ui.examplePhrases || 'Example Phrases' %>
                    </h3>
                    
                    <!-- Bilingual Settings -->
                    <div class="alert alert-light border border-primary mb-4">
                        <div class="row g-3 align-items-center">
                            <div class="col-12 col-md-6">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="showTranslation" onchange="onTranslationToggle()">
                                    <label class="form-check-label fw-semibold" for="showTranslation">
                                        <i class="bi bi-translate me-2"></i><%= ui.showTranslation || 'Show meaning in another language (visual aid only):' %>
                                    </label>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <select id="translationLang" class="form-select form-select-lg" disabled onchange="onTranslationLanguageChange()">
                                    <% languages.forEach(lang => { %>
                                    <option value="<%= lang %>"><%= languageNames[lang] || lang %></option>
                                    <% }) %>
                                </select>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Category & Phrase Dropdowns -->
                    <div class="row g-3 mb-3">
                        <div class="col-12 col-md-6">
                            <label for="categorySelect" class="form-label fw-semibold">
                                <i class="bi bi-folder me-2"></i><%= ui.selectCategory || 'Select Category:' %>
                            </label>
                            <select id="categorySelect" class="form-select form-select-lg">
                                <option value="">-- Choose a category --</option>
                            </select>
                        </div>
                        
                        <div class="col-12 col-md-6">
                            <label for="phraseSelect" class="form-label fw-semibold">
                                <i class="bi bi-chat-left-text me-2"></i><%= ui.selectPhrase || 'Select Phrase:' %>
                            </label>
                            <select id="phraseSelect" class="form-select form-select-lg" disabled>
                                <option value="">-- Choose a phrase --</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="d-grid">
                        <button id="usePhraseBtn" class="btn btn-primary btn-lg" onclick="useSelectedPhrase()" disabled>
                            <i class="bi bi-check-circle me-2"></i><%= ui.usePhrase || 'Use This Phrase' %>
                        </button>
                    </div>
                </div>
            </section>
        </main>

        <!-- Footer -->
        <footer class="bg-dark text-white text-center py-4 mt-5">
            <div class="container">
                <p class="mb-0"><%= ui.footer || 'Powered by Google TTS (gTTS) + pyttsx3' %></p>
            </div>
        </footer>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const LANGUAGE = '<%= language %>';
    </script>
    <!-- Custom JS -->
    <script src="/js/demo.js?v=<%= Date.now() %>"></script>
</body>
</html>
