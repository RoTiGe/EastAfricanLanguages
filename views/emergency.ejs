<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .emergency-header {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        }
        .emergency-card {
            border-left: 5px solid #dc3545;
            transition: transform 0.2s, box-shadow 0.2s;
        }
        .emergency-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
        }
        .speak-btn-large {
            min-width: 60px;
            min-height: 44px;
            font-size: 1.2rem;
        }
        .translation-text {
            font-size: 1.1rem;
            line-height: 1.6;
        }
        .language-badge {
            font-size: 0.9rem;
            padding: 0.4rem 0.8rem;
        }
        @media (max-width: 768px) {
            .translation-text {
                font-size: 1rem;
            }
        }
    </style>
</head>
<body>
    <div class="container-fluid p-0">
        <header class="emergency-header text-white py-4 position-relative">
            <div class="container">
                <a href="/" class="btn btn-light position-absolute top-0 start-0 m-3">
                    <i class="bi bi-arrow-left me-2"></i>Back to Home
                </a>
                <div class="text-center">
                    <h1 class="display-5 fw-bold">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <%= title %>
                    </h1>
                    <p class="lead mb-0">Critical survival phrases in multiple languages</p>
                </div>
            </div>
        </header>

        <!-- Breadcrumb Navigation -->
        <div class="container mt-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/"><i class="bi bi-house-door me-1"></i>Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Emergency Phrases</li>
                </ol>
            </nav>
        </div>

        <main class="container my-4">
            <div class="alert alert-danger mb-4">
                <i class="bi bi-info-circle me-2"></i>
                <strong>Emergency Use:</strong> Tap any phrase to hear it spoken. These phrases work in critical situations.
            </div>

            <div id="emergency-phrases">
                <% emergencyPhrases.forEach((phrase, index) => { %>
                <div class="card emergency-card shadow-sm mb-4">
                    <div class="card-header bg-danger text-white">
                        <h3 class="h5 mb-0">
                            <i class="bi bi-megaphone-fill me-2"></i>
                            <%= phrase.base_meaning %>
                        </h3>
                    </div>
                    <div class="card-body">
                        <% if (phrase.usage_notes) { %>
                        <div class="alert alert-warning mb-3">
                            <small><strong><i class="bi bi-lightbulb me-1"></i>When to use:</strong> <%= phrase.usage_notes %></small>
                        </div>
                        <% } %>
                        
                        <div class="row g-3">
                            <% Object.entries(phrase.translations).forEach(([lang, text]) => { %>
                            <div class="col-md-6">
                                <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded">
                                    <div class="flex-grow-1">
                                        <span class="badge language-badge bg-primary mb-2"><%= lang.toUpperCase() %></span>
                                        <div class="translation-text"><%= text %></div>
                                    </div>
                                    <button onclick="speakEmergencyPhrase('<%= text %>', '<%= lang %>')" 
                                            class="btn btn-danger speak-btn-large ms-3"
                                            title="Speak this phrase"
                                            data-text="<%= text %>">
                                        <i class="bi bi-volume-up-fill"></i>
                                    </button>
                                </div>
                            </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </main>

        <footer class="bg-dark text-white text-center py-4 mt-5">
            <div class="container">
                <p class="mb-0">
                    <i class="bi bi-shield-fill-check me-2"></i>
                    Emergency Phrases - Always Available
                </p>
            </div>
        </footer>
    </div>

    <script>
        // Speak emergency phrase using TTS
        async function speakEmergencyPhrase(text, language) {
            const button = event.target.closest('button');
            const originalHTML = button.innerHTML;
            
            try {
                // Show loading state
                button.disabled = true;
                button.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';
                
                const response = await fetch('/api/speak', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ text, language })
                });
                
                if (!response.ok) {
                    throw new Error(`TTS failed: ${response.statusText}`);
                }
                
                const audioBlob = await response.blob();
                const audioUrl = URL.createObjectURL(audioBlob);
                const audio = new Audio(audioUrl);
                
                // Play audio
                await audio.play();
                
                // Restore button after audio plays
                audio.onended = () => {
                    button.disabled = false;
                    button.innerHTML = originalHTML;
                };
                
                audio.onerror = () => {
                    button.disabled = false;
                    button.innerHTML = originalHTML;
                    showError('Failed to play audio');
                };
                
            } catch (error) {
                console.error('TTS Error:', error);
                button.disabled = false;
                button.innerHTML = originalHTML;
                showError('Failed to generate speech. Please check your connection and try again.');
            }
        }

        // Show error message
        function showError(message) {
            const alert = document.createElement('div');
            alert.className = 'alert alert-danger alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-3';
            alert.style.zIndex = '9999';
            alert.innerHTML = `
                <i class="bi bi-exclamation-triangle me-2"></i>${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.body.appendChild(alert);
            
            // Auto-dismiss after 5 seconds
            setTimeout(() => {
                alert.remove();
            }, 5000);
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

